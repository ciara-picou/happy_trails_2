<%= stylesheet_link_tag 'application.css' %>
<h1 class="header"> Welcome <%= @user.name %> </h1>
<div class="user_show_div">
  <div class="inner_user_div">
    <h2> Plan your next adventure </h2>
    <ul>
      <li>Check out our amazing <a href="/trails">Trails</a></li>
      <li>View your <a href="/trail_lists">Trail List</a></li>
      <li>Join other hikers on a group <a href="./hikes"> Hike</a></li>
    </ul>

    <%= button_to 'log out', {:controller => :sessions, :action => 'destroy'}, :method => :delete%><br><br>
    <h3>Your Scheduled Hikes:</h3>
    <% @user.hike_sign_ups.each do |sign_up| %>
    <%=link_to"#{sign_up.hike.trail.name} :","/hikes/#{sign_up.hike.id}" %> <%= sign_up.hike.hike_date%><br>
<% end %>

  </div>
</div>

<img class="trail_img" src="<%= Trail.first.imgMedium %>"> 


